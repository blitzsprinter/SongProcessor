<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AMQSongProcessor.UI.Views.AddView">

  <Grid RowDefinitions="1*,1*,1*,1*,6*">
    <TextBlock Grid.Row="0" Text="Add view" Margin="5" />
    <TextBox Grid.Row="1" Watermark="Directory" Text="{Binding Directory, Mode=TwoWay}" />
    <NumericUpDown Grid.Row="2" Watermark="ANN Id" Minimum="1" Value="{Binding Id, Mode=TwoWay}" Text="{Binding IdText, Mode=TwoWay}" />
    <Button Grid.Row="3" Content="Add" Command="{Binding Add}" />
  </Grid>
</UserControl>